doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Favourites
    body 

        section#favs-container
            each favAd in favs
                article#favs-box
                    p Id anuncio favorito: #{favAd.id}
                    p # #{favAd.user_id}
                    p Anuncio: #{favAd.ad}
                    button.DeleteButton(value="Delete" adId=favAd.id) Delete

         
        ul#favsList(action="api/favourites" method="GET")
        script(src="/scripts/favourites.js")
