
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        style 
            include ./styles.css
        title Vista de usuarios registrados
    body
         each user in users
            h3 Usuario:
            p Id usuario: #{user.id}
            p Email: #{user.email}
            p Password: #{user.password}
            p Name: #{user.full_name}
            p Role: #{user.role}


         form#userCreate(action="/users" method="POST") 
            h2 Crear usuario
            label(for="") Nombre completo: 
            input#nameInput(type="text" name="nameInput" placeholder='Introduce nombre completo')
            br
            label(for="") Email:  
            input#email2(type="text" name="email" placeholder='Introduce un correo electrónico')
            label(for="") Contraseña: 
            input#pass1(type="text" name="password" placeholder='Introduce una contraseña')
            label(for="") Role:  
            input#pass2(type="text" name="Role" placeholder='Introduce un rol: admin o client')
            label(for="") Id usuario:  
            input#email2(type="text" name="description" placeholder='Introduce un id') 
            button#sendSignUp(type="submit") Crear
         script(src="/JobOffer/controllers/adminControllers.js")  
